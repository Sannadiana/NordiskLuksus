<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/main.css">

</head>
<body>

     <header id="header-content">
        <a asp-action="AllProducts">Home</a>
             @{
                string color = Context.Session.GetString("Color");

                if(color != ""){
                    <style>
                        a{
                            color: @color;
                        }
                    </style>
                }
            }
        </header>
    
    <div id="main-page-container">


        <nav id="main-page-navigation">
            <ul>                
                <li><a asp-action="AllProducts">Alle produkter</a></li>
                <li><a asp-action="CreateProduct">Opprett produkt</a></li>
                 <li><a asp-action="SetColor">Endre fargetema</a></li>
                
            </ul>
        </nav>

        <main>
            @RenderBody()
        </main>

        <footer id="main-page-footer">

        </footer>

    </div><!-- end main-page-container -->

</body>
</html>