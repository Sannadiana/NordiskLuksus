@model Product

<section>
        <header>
        <h3>Slett Produkt</h3>
        </header>

        <section>
            <h4> @Html.DisplayFor(product => product.Title)</h4>
            <img @Html.DisplayFor(product => product.ImageSrc)/>
            <p>@Html.DisplayFor(product => product.Desc)</p>
            <p>Pris: @Html.DisplayFor(product => product.Price)</p>

            <form asp-action="DeleteProduct">
                <input asp-for="ID" type="hidden">
                 <input type="submit" value="Slett produkt">
            </form>
        </section>
    </section>