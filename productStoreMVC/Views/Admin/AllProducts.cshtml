
@model IEnumerable<Product>

    <section>
        <header>
        <h3>Produktoversikt</h3>
        </header>



        <section class="card-container">
            @{
                foreach (Product product in Model)
                {
                   
                    <div class="product-content">
                <article>
                    <h4>@product.Title</h4>
                     <img class="img-product" src="~/images/@product.ImageSrc"/>
                    <p>@product.Desc</p>
                    <p>Pris i NOK: @product.Price</p>
                    @{
                       
                            <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.Id">Endre</a>
                            <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@product.Id">Slett</a>
                        
                    }
                     
                </article>
                </div>
                    
                
                }
            }
        </section>
    </section>
